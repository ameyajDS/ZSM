@using DCC.UMB.WDF.Views
@model CDBModel.WorkingUnitViewModel

<div ng-controller="WorkingUnitController">

    <form class="classWorkingUnit" novalidate name="frmWorkingUnit" >
        <label>&nbsp;</label>
        <div class="row-fluid span10 ">
            <fieldset class="fieldset">
                <legend class="panel"><b>Working Unit Details</b></legend>

                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.working_unit_id, span: 4, isConditionallyVisible: true, addRangeSupplementForQueryMode: true, readOnly: false)
                </div>
                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.working_unit_nm, span: 4@*, forceUpperCase:true*@, required: true)
                    @Html.WDFEditorFor(m => m.working_unit_cd, span: 4, cssClassesForInputTag: "first-focus"@*, forceUpperCase:true*@, required: true)
                </div>
                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.Is_root, span: 4)
                    @Html.WDFEditorFor(m => m.group_working_unit_id_lookup, span: 4, isConditionallyMandatory: true)
                </div>
                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.Is_leaf, span: 4)
                    @Html.WDFEditorFor(m => m.society_id_lookup, span: 4)
                </div>
                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.Is_staff_posted, span: 4)
                    @Html.WDFEditorFor(m => m.working_unit_entity_id_lookup, span: 4)
                </div>

                <div class="row-fluid span10">
                    @Html.WDFEditorFor(m => m.effective_from, span: 4)
                    @Html.WDFEditorFor(m => m.effective_till, span: 4)
                </div>
            </fieldset>
        </div>
    </form>
</div>
